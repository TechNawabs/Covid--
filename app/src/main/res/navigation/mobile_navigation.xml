<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.technawabs.covid_sampurn.ui.national.NationalListFragment"
        android:label="@string/title_home"
        tools:layout="@layout/national_list_fragment" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.technawabs.covid_sampurn.ui.daily.DailyListFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/daily_list_fragment" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.technawabs.covid_sampurn.ui.raw.RawListFragment"
        android:label="Helplines"
        tools:layout="@layout/raw_list_fragment" />

    <fragment
        android:id="@+id/navigation_helplines"
        android:name="com.technawabs.covid_sampurn.ui.travel.TravelListFragment"
        android:label="Condo"
        tools:layout="@layout/travel_list_fragment" />
</navigation>
