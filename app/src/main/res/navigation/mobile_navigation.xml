<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.technawabs.covid_sampurn.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.technawabs.covid_sampurn.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/national_list_cases_card" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.technawabs.covid_sampurn.ui.notifications.NotificationsFragment"
        android:label="@string/title_updates"
        tools:layout="@layout/fragment_notifications" />
