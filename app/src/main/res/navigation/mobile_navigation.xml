<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.technawabs.covid_sampurn.ui.national.NationalListFragment"
        android:label="@string/title_home"
        tools:layout="@layout/national_list_fragment" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.technawabs.covid_sampurn.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/dashboard_list_fragment" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.technawabs.covid_sampurn.ui.notifications.NotificationsFragment"
        android:label="Covid Updates"
        tools:layout="@layout/notifications_fragment" />

    <fragment
        android:id="@+id/navigation_helplines"
        android:name="com.technawabs.covid_sampurn.ui.helplines.HelplineFragment"
        android:label="Helpline"
        tools:layout="@layout/helpline_fragment" />
</navigation>
